{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noErrorTruncation": false,
    "sourceMap": true,
    "declaration": true,
    "incremental": true,
    "composite": true,
    "skipLibCheck": true,
    "paths": {
      "@example/api": [
        "./packages/api"
      ],
      "@example/webapp": [
        "./packages/webapp"
      ]
    }
  },
  "files": [],
  "references": [
    {
      "path": "packages/api"
    },
    {
      "path": "packages/webapp"
    }
  ],
  "exclude": [
    "**/node_modules",
    "build"
  ]
}